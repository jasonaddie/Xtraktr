<% title t('.title') %>

<%= render :partial => 'shared/link_to_help_page' %>

<% if @dataset.urls.present? && @dataset.urls.admin_codebook.present? %>
  <% if @dataset.reset_download_files? %>
    <div class="notification wide info">
      <div class='figure'></div>
      <div class='text'>
        <%= t('.recent_changes').html_safe %>
      </div>
    </div>
  <% end %>

  <div class="download data-download" data-id="<%= @dataset.id.to_s %>" data-lang="<%= @dataset.current_locale %>" data-download-type="admin">
      <ul>
        <li><div class="type" data-type='csv' title="<%= t('download_data_options.title.csv') %>" data-placement="top"><%= t('download_data_options.text.csv') %></div></li>
        <li><div class="type" data-type='r' title="<%= t('download_data_options.title.r') %>" data-placement="top"><%= t('download_data_options.text.r') %></div></li>
        <li><div class="type" data-type='spss' title="<%= t('download_data_options.title.spss') %>" data-placement="top"><%= t('download_data_options.text.spss') %></div></li>
        <li><div class="type" data-type='stata' title="<%= t('download_data_options.title.stata') %>" data-placement="top"><%= t('download_data_options.text.stata') %></div></li>
        <li><a href="<%= @dataset.datafile.url %>" target="_blank" title="<%= t('download_data_options.title.original') %>" data-placement="top"><%= t('download_data_options.text.original') %></a></li>
      </ul>
    </div>

<% else %>
  <p class="italic">
    <%= t('.no_files') %>
  </p>
  <p class="italic">
    <%= t('.no_files2') %>
  </p>
  <p class="italic">
    <a href="<%= @dataset.datafile.url %>" class="btn btn-primary" target="_blank" title="<%= t('download_data_options.title.original') %>" data-placement="top"><%= t('download_data_options.text.original') %></a>
  </p>
<% end %>

<div class="data-loader-message-container">
  <div class="loader-text">
    <%= simple_format(t('.generating_text')) %>
  </div>
</div>
