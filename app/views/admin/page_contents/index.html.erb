<%- model_class = PageContent -%>
<% title t '.title', :default => model_class.model_name.human(:count => 2) %>

<div class="form-group form-group-admin-buttons">
  <% if current_user.role?(User::ROLES[:admin]) %>
    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_admin_page_content_path,
                :class => 'btn btn-primary' %>
  <% end %>
  <%= link_to t('helpers.links.admin'), admin_path,
  :class => 'btn btn-default' %>
</div>

<%= render :partial => 'shared/link_to_help_page' %>

<table class="table table-striped display">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @page_contents.each do |page| %>
      <tr>
        <td><%= link_to page.name, admin_page_content_path(page) %></td>
        <td><%= page.title %></td>
        <td>
          <%= link_to '',
                      edit_admin_page_content_path(page),
                      :title => t('helpers.links.edit'),
                      :class => 'btn btn-xs btn-edit' %>
          <% if current_user.role?(User::ROLES[:admin]) %>
            <%= link_to '',
                        admin_page_content_path(page),
                        :title => t("helpers.links.destroy"),
                        :method => :delete,
                        :data => { :confirm => I18n.t("helpers.links.confirm") },
                        :class => 'btn btn-xs btn-delete' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


