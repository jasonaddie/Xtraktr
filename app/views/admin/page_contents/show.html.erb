<%- model_class = PageContent -%>
<% title t '.title', :default => model_class.model_name.human %>


<%= render :partial => 'shared/link_to_help_page' %>

<div class="form-group form-group-admin-buttons">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_page_contents_path, :class => 'btn btn-default'  %>
  <%= link_to '',
              edit_admin_page_content_path(@page_content),
              :title => t('helpers.links.edit'),
              :class => 'btn btn-edit' %>
  <%= link_to '',
              admin_page_content_path(@page_content),
              :title => t("helpers.links.destroy"),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
              :class => 'btn btn-delete' %>
	<%= link_to t('helpers.links.admin'), admin_path, :class => 'btn btn-default' %>
</div>

<p><strong><%= model_class.human_attribute_name(:name) %>:</strong>
<%= @page_content.name %></p>

<p><strong><%= model_class.human_attribute_name(:title) %>:</strong>
<%= @page_content.title %></p>

<p><strong><%= model_class.human_attribute_name(:content) %>:</strong></p>
<div class="tinymce_format">
  <%= simple_format_no_tags(@page_content.content, {}, {sanitize: false}) %>
</div>



